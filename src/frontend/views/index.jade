extends layout

block content
  .cafe-container
    h1.cafe-title= title
    p.cafe-description= description

    .main-content
      .menu-section
        h2.menu-title Our Coffee Menu
        .menu-list
          each item in menu
            .menu-item
              .menu-item-header
                h3.item-name= item.name
                .item-price= item.price
              p.item-description= item.description

      .audio-section
        h2.audio-title Order via Voice
        p.audio-description Click once to start a continuous conversation. Speak naturally, pause when done, and AI responds. Keeps listening until you click stop.
        .audio-box
          .audio-visualizer
            .audio-visualizer-bars
              .visualizer-bar
              .visualizer-bar
              .visualizer-bar
              .visualizer-bar
              .visualizer-bar
              .visualizer-bar
              .visualizer-bar
              .visualizer-bar
          button.record-button
            span.record-icon
            span Start Voice Order
          .audio-status-text Click microphone to start voice order
          .audio-transcription-display(style='display: none;')
            .transcription-label Live Transcription:
            .transcription-text

      .chat-section
        h2.chat-title Order via AI Chat
        p.chat-description Chat with our AI assistant to place your order. Our local LLM-powered system will help you customize your perfect coffee drink.
        .chat-box
          .chat-messages
            // Messages will appear here
          .chat-input
            input.message-input(type="text" placeholder="Type your order here..." autofocus)
            button.send-button Send

      .cart-section
        h2.cart-title Your Cart
        .cart-content
          .cart-items
            // Cart items will appear here
          .cart-summary
            .cart-total
              span.total-label Total Items:
              span.total-count 0
            .cart-actions
              button.empty-cart-button.secondary-button Empty Cart
              button.checkout-button.primary-button Checkout