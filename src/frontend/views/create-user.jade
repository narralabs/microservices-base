extends layout

block content
  h1= title
  p Welcome to #{title}

  if error
    div.alert.alert-error
      p= error

  form(action="/users/create", method="POST")
    div.form-group
      label(for="firstName") First Name:
      input#firstName(type="text", name="firstName", value=user ? user.first_name : '')

    div.form-group
      label(for="lastName") Last Name:
      input#lastName(type="text", name="lastName", value=user ? user.last_name : '')

    div.form-group
      label(for="email") Email:
      input#email(type="email", name="email", value=user ? user.email : '', required)

    div.form-group
      label(for="password") Password:
      input#password(type="password", name="password", required)
      small.form-help Minimum 8 characters, must include numbers and letters

    div.form-group
      label(for="confirmPassword") Confirm Password:
      input#confirmPassword(type="password", name="confirmPassword", required)
    
    button(type="submit") Create User
